@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    body {
        background-color: #F9F9F9;
    }

    .flex-column-fluid {
        flex: 1 0 auto;
    }

    .p-12 {
        padding: 3rem !important;
    }

    .p-lg-20 {
        padding: 2rem 3rem 0rem 3rem !important;
    }

    .p-20 {
        padding: 4rem !important;
    }


    .mb-11 {
        margin-bottom: 2.5rem !important;
    }

    .text-gray-900 {
        color: #071437 !important;
    }

    .text-gray-500 {
        color: #99A1B7 !important;
    }

    .fw-semibold {
        font-weight: 500 !important;
    }

    .fs-6 {
        font-size: 1.075rem !important;
    }

    .text-gray-500 {
        color: #99A1B7 !important;
    }

    .fs-7 {
        font-size: .95rem !important;
    }

    .separator.separator-content {
        display: flex;
        align-items: center;
        border-bottom: 0;
        text-align: center;
    }

    .separator {
        border-bottom: 2px solid #F1F1F4 !important;
    }

    .w-125px {
        width: 125px !important;
    }

    .w-md-600px {
        width: 600px !important;
    }

    .my-14 {
        margin-top: 1.5rem !important;
        margin-bottom: 1.5rem !important;
    }

    .form-control {
        padding: 0.775rem 1rem !important;
        font-weight: 500 !important;
        color: #99A1B7 !important;
        background-color: #ffffff;
        border: 1px solid #DBDFE9 !important;
    }

        .form-control:focus {
            border-color: #F1F1F4 !important;
            outline: none !important;
            box-shadow: none !important;
            background-color: #F1F1F4 !important;
            color: #4B5675 !important;
        }

    .btn-primary {
        color: #ffffff !important;
        background-color: #1B84FF !important;
        border-color: #1B84FF !important;
    }

    .padding-bottom-0: {
        padding-bottom: 0 !important;
    }

    .mb-10 {
        margin-bottom: 2.5rem !important;
    }

    .fs-6 {
        font-size: 1rem !important;
    }

</style>

<div class="d-flex flex-column flex-column-fluid">

    <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center  p-12 p-lg-20">
        <div class="bg-white d-flex flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
            <div class="d-flex flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="text-center mb-11">
                        <h3 class="text-gray-900 fw-bolder mb-2">Sign Up</h3>
                    </div>

                    <div class="separator separator-content my-14">
                        <span class="w-125px text-gray-500 fw-semibold fs-7"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger fw-bold" role="alert"></div>
                    <div class="mb-4">
                        <input asp-for="Input.UserName" class="form-control mb-1" autocomplete="UserName" aria-required="true"
                               placeholder="User Name" />

                        <span asp-validation-for="Input.UserName" class="text-danger fw-bold"></span>
                    </div>
                    <div class="mb-4">
                        <input asp-for="Input.Email" class="form-control mb-1" autocomplete="username" aria-required="true"
                               placeholder="Email" />

                        <span asp-validation-for="Input.Email" class="text-danger fw-bold"></span>
                    </div>
                    <div class="mb-4">
                        <input asp-for="Input.Password" class="form-control mb-1" autocomplete="new-password"
                               aria-required="true" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger fw-bold"></span>
                    </div>
                    <div class="mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control mb-1" autocomplete="new-password"
                               aria-required="true" placeholder="Repeat Password" />

                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger fw-bold"></span>
                    </div>
                    <div class="d-grid mb-10">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Sign up</button>
                    </div>

                    <div class="text-gray-500 text-center fw-semibold fs-6">
                        Already have an Account?
                        <a asp-page="./Login" class="link-primary text-decoration-none " asp-route-returnUrl="@Model.ReturnUrl">Sign In</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
